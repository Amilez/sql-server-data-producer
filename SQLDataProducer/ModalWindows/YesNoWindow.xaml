<Window x:Class="SQLDataProducer.ModalWindows.YesNoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Border x:Name="contentPlaceHolder" />
        
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="OK" Margin="5 0 0 0" Width="50" x:Name="yesButton" Click="yesButton_Click" />
            <Button Content="Cancel" Margin="5 0 5 0" Width="50" x:Name="noButton" Click="noButton_Click" />
        </StackPanel>
    </Grid>
</Window>
