<Window xmlns:my="clr-namespace:SQLRepeater.Views"  x:Class="SQLRepeater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:me="clr-namespace:SQLRepeater.ViewModels"
        xmlns:conv="clr-namespace:SQLRepeater.Converters"
        Title="SQL Repeater" Height="600" Width="800">
    
    <Window.Resources>
        <me:MainWindowViewModel x:Key="vm" />
        <me:ExecutionOrderViewModel x:Key="orderVm" />
    </Window.Resources>
    
    <Grid DataContext="{StaticResource ResourceKey=vm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*" />
            <ColumnDefinition Width="424*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="281*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>

        <StackPanel  Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <Button Content="Conn..." Margin="3 3 3 3" Padding="5 0 5 0" Command="{Binding OpenSqlConnectionBuilderCommand}" />
            <Button Content="Load" Margin="3 3 3 3" Padding="5 0 5 0" Command="{Binding LoadTablesCommand}" />
        </StackPanel>
        
        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding ConnectionString, Mode=TwoWay}" Margin="3 3 3 3" MinWidth="50" />

        <StackPanel Grid.Column="1" Grid.Row="1">
            <my:ExecutionOrderView DataContext="{StaticResource ResourceKey=orderVm}" />
            <my:ExecutionDetailsView DataContext="{Binding Path=CurrentExecutionItem, Source={StaticResource ResourceKey=orderVm}}" />
        </StackPanel>

        <my:SidePanelView Grid.Column="0" Grid.Row="1" />
        
        <GroupBox Grid.Row="2" Grid.Column="1" Header="Options">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Start date:" Margin="0 3 0 3" />
                <TextBox Text="{Binding StartDateForGeneration}"  Margin="0 3 0 3" />

                <TextBlock Text="Start N:" Margin="0 3 0 3" />
                <TextBox Text="{Binding StartNumberForGeneration}"  Margin="0 3 0 3" />
            </StackPanel>
        </GroupBox>
        
    </Grid>
</Window>
